<body>

    <form action="WorkSaveFile.php" method="post">
        <input id="fname" name="fname" type="text" value="./z/test.htm">[]</input> <br>
        <textarea cols="80" id="editor1" name="editor1" rows="1800"> </textarea>
        <script type="text/javascript">

            //<![CDATA[

            CKEDITOR.replace('editor1', {
                fullPage: false,
                extraPlugins: 'docprops',
                on: {
                    'instanceReady': function (evt) { evt.editor.execCommand('maximize'); },
                    'beforeCommandExec': function (evt) { intercept_beforeCommandExec(evt); }
                }
            });

            //]]>
        </script>
    </form>
    <div id="ajx_load_status">

